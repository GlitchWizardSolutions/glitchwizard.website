    <script>
        // Template preview styling
        document.addEventListener('DOMContentLoaded', function() {
            const previews = document.querySelectorAll('.template-preview');
            
            previews.forEach(preview => {
                const template = preview.dataset.template;
                const area = preview.dataset.area || 'public';
                stylePreview(preview, template, area);
            });
        });
        
        function stylePreview(preview, template, area) {
            const content = preview.querySelector('.preview-content');
            if (!content) return;
            
            // Clear existing content
            content.innerHTML = '';
            
            // Create preview elements
            const header = document.createElement('div');
            header.className = 'preview-header';
            
            const button = document.createElement('div');
            button.className = 'preview-button';
            
            // Apply template-specific styling
            switch (template) {
                case 'high-contrast':
                    preview.style.background = '#000000';
                    header.style.background = '#ffffff';
                    button.style.background = '#ffffff';
                    break;
                case 'subtle':
                    preview.style.background = '#f8f9fa';
                    header.style.background = '#e9ecef';
                    button.style.background = '#007bff';
                    break;
                case 'bold':
                    preview.style.background = 'linear-gradient(135deg, #007bff 0%, #6610f2 100%)';
                    header.style.background = '#ffffff';
                    button.style.background = '#ffc107';
                    break;
                case 'casual':
                    preview.style.background = 'linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%)';
                    header.style.background = '#007bff';
                    button.style.background = '#28a745';
                    header.style.borderRadius = '15px';
                    button.style.borderRadius = '15px';
                    break;
                default: // default
                    preview.style.background = '#ffffff';
                    header.style.background = '#007bff';
                    button.style.background = '#6c757d';
                    break;
            }
            
            content.appendChild(header);
            content.appendChild(button);
        }
        
        function selectTemplate(template, area) {
            // Visual feedback for selection
            document.querySelectorAll('.template-card').forEach(card => {
                card.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');
        }
        
        // Auto-submit on sync mode change
        document.querySelectorAll('input[name="sync_mode"]').forEach(radio => {
            radio.addEventListener('change', function() {
                this.closest('form').submit();
            });
        });
    </script>
